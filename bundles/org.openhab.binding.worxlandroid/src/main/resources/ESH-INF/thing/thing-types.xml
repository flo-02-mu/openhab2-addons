<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="worxlandroid"
						  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
						  xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
						  xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<!-- OpenWeatherMap Binding -->
	<thing-type id="mower">
		<supported-bridge-type-refs>
			<bridge-type-ref id="account" />
		</supported-bridge-type-refs>

		<label>Mower</label>
		<description>Mower</description>

		<channels>
			<channel id="distanceCovered" typeId="distanceCovered" />
			<channel id="mowerWorkTime" typeId="mowerWorkTime" />
			<channel id="bladeWorkTime" typeId="bladeWorkTime" />
			<channel id="batteryChargeCycles" typeId="batteryChargeCycles" />
			<channel id="batteryTemperature" typeId="batteryTemperature" />
			<channel id="batteryVoltage" typeId="batteryVoltage" />
			<channel id="batteryPercentage" typeId="batteryPercentage" />
			<channel id="batteryCharging" typeId="batteryCharging" />
			<channel id="batteryState" typeId="batteryState" />
			<channel id="messagesIn" typeId="messagesIn" />
			<channel id="messagesOut" typeId="messagesOut" />
			<channel id="pushNotifications" typeId="pushNotifications" />
			<channel id="rsi" typeId="rsi" />
			<channel id="statusCode" typeId="statusCode" />
            <channel id="statusDescription" typeId="statusDescription" />
			<channel id="errorCode" typeId="errorCode" />
            <channel id="errorDescription" typeId="errorDescription" />
			<channel id="lastUpdate" typeId="lastUpdate" />
			<channel id="mowerCommand" typeId="mowerCommand"/>
		</channels>

		<config-description>
			<parameter name="mac" type="text" required="true">
				<label>MAC Address</label>
				<description>MAC address of the mower (HEX, without delimiter)</description>
			</parameter>
			<parameter name="serial_number" type="text" required="true">
				<label>Serial Number</label>
				<description>The serial number of the mower</description>
			</parameter>
			<parameter name="topic_command_in" type="text" required="true">
				<label>Topic in</label>
				<description>The MQTT topic name to subscribe to for inbound messages</description>
			</parameter>
			<parameter name="topic_command_out" type="text" required="true">
				<label>Topic out</label>
				<description>The MQTT topic name to subscribe to for outbound messages</description>
			</parameter>
		</config-description>


	</thing-type>

	<channel-type id="distanceCovered" advanced="false">
		<item-type>Number:Length</item-type>
		<label>Distance covered</label>
		<description>The distance the mower has covered</description>
		<state pattern="%d %unit%" readOnly="true" />
	</channel-type>

	<channel-type id="mowerWorkTime" advanced="false">
		<item-type>Number:Time</item-type>
		<label>Mower work time</label>
		<description>The hours the mower has worked</description>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="bladeWorkTime" advanced="false">
		<item-type>Number:Time</item-type>
		<label>Blade work time</label>
		<description>The hours the blades have worked</description>
		<state pattern="%d %unit%" readOnly="true" />
	</channel-type>

	<channel-type id="batteryChargeCycles" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Battery charging cycles</label>
		<description>The battery charging cycles</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="batteryTemperature" advanced="false">
		<item-type>Number:Temperature</item-type>
		<label>Battery temperature</label>
		<description>The battery temperature</description>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="batteryVoltage" advanced="false">
		<item-type>Number:ElectricPotential</item-type>
		<label>Battery voltage</label>
		<description>The battery voltage</description>
		<state pattern="%d %unit%" readOnly="true"/>
	</channel-type>

	<channel-type id="batteryCharging" advanced="false">
		<item-type>Switch</item-type>
		<label>Battery charging</label>
		<description>Indicates whether battery is currently charging or not</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="batteryPercentage" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Battery percentage</label>
		<description>The battery percentage</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="batteryState" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Battery state</label>
		<description>The battery state</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="messagesIn" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Messages In</label>
		<description>The amount of messages received by the Worx cloud service</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="messagesOut" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Messages In</label>
		<description>The amount of messages received by the Worx cloud service</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="rsi" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Wifi strength</label>
		<description>The wifi strength</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

	<channel-type id="pushNotifications" advanced="false">
		<item-type>Switch</item-type>
		<label>Push Notifications</label>
		<description>Indicates whether push notifications are enabled or not</description>
	</channel-type>

	<channel-type id="statusCode" advanced="false">
		<item-type>Number:Dimensionless</item-type>
		<label>Status code</label>
		<description>The status code</description>
		<state pattern="%d" readOnly="true"/>
	</channel-type>

    <channel-type id="errorCode" advanced="false">
        <item-type>Number:Dimensionless</item-type>
        <label>Error code</label>
        <description>The status code</description>
        <state pattern="%d" readOnly="true"/>
    </channel-type>

	<channel-type id="statusDescription" advanced="false">
		<item-type>String</item-type>
		<label>Status description</label>
		<description>The status description</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="errorDescription" advanced="false">
		<item-type>String</item-type>
		<label>Error description</label>
		<description>The error description</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="lastUpdate" advanced="false">
		<item-type>DateTime</item-type>
		<label>Last Update</label>
		<description>The timestamp of the last update of all channels</description>
		<state readOnly="true"/>
	</channel-type>

	<channel-type id="mowerCommand" advanced="false">
		<item-type>String</item-type>
		<label>Mower Command</label>
		<description>Send a start/stop/go home/zone training command to the mower</description>
        <state>
            <options>
                <option value="START">Start</option>
                <option value="PAUSE">Pause</option>
                <option value="GO_HOME">Go home</option>
                <option value="ZONE_TRAINING">Zone training</option>
            </options>
        </state>
	</channel-type>

</thing:thing-descriptions>
